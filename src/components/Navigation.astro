---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<div class="nav-links" transition:animate="slide">
    <a class={currentPath === "" ? "active" : ""} href="/">Home</a>
    <a class={currentPath === "about" ? "active" : ""} href="/about">About</a>
    <a class={currentPath === "blog" ? "active" : ""} href="/blog">Blog</a>
    <a class={currentPath === "tags" ? "active" : ""} href="/tags">Tag Index</a>
</div>

<style>
    .active {color: red !important;}
</style>